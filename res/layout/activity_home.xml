<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="me.egois.calculator.HomeActivity" >

    <TextView
        android:id="@+id/strDisplay"
        style="@style/CDisplay" />
        
   <Button
       android:id="@+id/btnClear"
       android:layout_below="@+id/strDisplay"
       style="@style/CButton"
       android:text="AC" />
   
   <Button
       android:id="@+id/btnPercent"
       android:layout_below="@+id/strDisplay"
       android:layout_toRightOf="@+id/btnClear"
       android:layout_toEndOf="@+id/btnClear"
       style="@style/CButton"
       android:text="%" />
   
   <Button
        android:id="@+id/btnDot"
        android:text="."
       	android:layout_below="@+id/strDisplay"
       	android:layout_toRightOf="@+id/btnPercent"
       	android:layout_toEndOf="@+id/btnPercent"
        style="@style/CButton" />   
        
   <Button
        android:id="@+id/btnDivide"
        android:text=":"
       	android:layout_below="@+id/strDisplay"
       	android:layout_toRightOf="@+id/btnDot"
       	android:layout_toEndOf="@+id/btnDot"
        style="@style/CButtonRight" />  
        
   <Button
        android:id="@+id/btnSeven"
        android:text="7"
        android:layout_below="@+id/btnClear"
        style="@style/CButton" />   
        
	<Button
        android:id="@+id/btnEight"
        android:text="8"
        android:layout_below="@+id/btnClear"
        android:layout_toRightOf="@+id/btnSeven"
        android:layout_toEndOf="@+id/btnSeven"
        style="@style/CButton" />
    
   <Button
        android:id="@+id/btnNine"
        android:text="9"
        android:layout_below="@+id/btnClear"
        android:layout_toRightOf="@+id/btnEight"
        android:layout_toEndOf="@+id/btnEight"
        style="@style/CButton" />
   
   <Button
       android:id="@+id/btnMultiply"
       style="@style/CButtonRight"
       android:layout_below="@+id/btnClear"
       android:layout_toRightOf="@+id/btnNine"
       android:layout_toEndOf="@+id/btnNine"
       android:text="*" />
   
   <Button
       android:id="@+id/btnFour"
       style="@style/CButton"
       android:layout_below="@+id/btnSeven"
       android:text="4" />

   <Button
       android:id="@+id/btnFive"
       style="@style/CButton"
	   android:layout_below="@+id/btnSeven"
       android:layout_toRightOf="@+id/btnFour"
       android:layout_toEndOf="@+id/btnFour"
       android:text="5" />

   <Button
       android:id="@+id/btnSix"
       style="@style/CButton"
	   android:layout_below="@+id/btnSeven"
       android:layout_toRightOf="@+id/btnFive"
       android:layout_toEndOf="@+id/btnFive"
       android:text="6" />   
      
   <Button
        android:id="@+id/btnMinus"
        android:text="-"
	   android:layout_below="@+id/btnSeven"
       android:layout_toRightOf="@+id/btnSix"
       android:layout_toEndOf="@+id/btnSix"
        style="@style/CButtonRight" />

   <Button
       android:id="@+id/btnOne"
       style="@style/CButton"
       android:layout_below="@+id/btnFour"
       android:text="1" />

   <Button
       android:id="@+id/btnTwo"
       style="@style/CButton"
	   android:layout_below="@+id/btnFour"
       android:layout_toRightOf="@+id/btnOne"
       android:layout_toEndOf="@+id/btnOne"
       android:text="2" />

   <Button
       android:id="@+id/btnThree"
       style="@style/CButton"
	   android:layout_below="@+id/btnFour"
       android:layout_toRightOf="@+id/btnTwo"
       android:layout_toEndOf="@+id/btnTwo"
       android:text="3" />

   <Button
        android:id="@+id/btnPlus"
        android:text="+"
	   android:layout_below="@+id/btnFour"
       android:layout_toRightOf="@+id/btnThree"
       android:layout_toEndOf="@+id/btnThree"
        style="@style/CButtonRight" />

   <Button
       android:id="@+id/btnZero"
       style="@style/CButton"
	   android:layout_below="@+id/btnOne"
       android:text="0" />
   
   <Button
       android:id="@+id/btnEqual"
       style="@style/CButtonRight"
	   android:layout_below="@+id/btnOne"
       android:layout_toRightOf="@+id/btnZero"    
       android:layout_toEndOf="@+id/btnZero"       
       android:text="=" />   
   
</RelativeLayout>
